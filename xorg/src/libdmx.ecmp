[info]
name = libdmx
version = 1.1.4
url = http://ftp.x.org/pub/individual/lib/libdmx-$version.tar.bz2

[description]
X11 Distributed Multihead extension library

[dependencies]
libx11 
libxext 

[download]
wget $URL
tar -xf libdmx-$version.tar.bz2

[install]
	cd libdmx-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$BUILD_ROOT install

