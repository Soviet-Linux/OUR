[info]
name = libxv
version = 1.0.12
url = http://ftp.x.org/pub/individual/lib/libXv-$version.tar.xz

[description]
X11 Video extension library

[dependencies]
libx11 
libxext 

[download]
wget $URL
tar -xf libXv-$version.tar.xz

[install]
	cd libXv-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$BUILD_ROOT install

