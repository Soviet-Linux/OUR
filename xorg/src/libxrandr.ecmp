[info]
name = libxrandr
version = 1.5.3
url = http://ftp.x.org/pub/individual/lib/libXrandr-$version.tar.xz

[description]
X11 RandR extension library

[dependencies]
libxext 
libxrender 
libx11 

[download]
wget $URL
tar -xf libXrandr-$version.tar.xz

[install]
	cd libXrandr-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$BUILD_ROOT install

