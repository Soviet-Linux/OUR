[info]
name = libxxf86dga
version = 1.1.6
url = http://ftp.x.org/pub/individual/lib/libXxf86dga-$version.tar.xz

[description]
X11 Direct Graphics Access extension library

[dependencies]
libx11 
libxext 

[download]
wget $URL
tar -xf libXxf86dga-$version.tar.xz

[install]
	cd libXxf86dga-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$BUILD_ROOT install

