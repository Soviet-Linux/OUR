[info]
name = libxcursor
version = 1.2.1
url=http://ftp.x.org/pub/individual/lib/libXcursor-$version.tar.xz

[description]
X cursor management library

[dependencies]
libxrender libxfixes libx11 

[download]
wget $URL
tar -xf libXcursor-$version.tar.xz

[install]
	cd libXcursor-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$BUILD_ROOT install

