[info]
name = libxxf86vm
version = 1.1.5
url = http://ftp.x.org/pub/individual/lib/libXxf86vm-$version.tar.xz

[description]
X11 XFree86 video mode extension library

[dependencies]
libx11 
libxext 

[download]
wget $URL
tar -xf libXxf86vm-$version.tar.xz

[install]
	cd libXxf86vm-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$BUILD_ROOT install

