[install]
for package in $(grep -v '^#' ../list | awk '{print $1}')
do
  packagedir=${package%.tar.?z*}
  tar -xf $package
  pushd $packagedir
  ./configure $XORG_CONFIG
    make
    make DESTDIR=$BUILD_ROOT install
  popd
done